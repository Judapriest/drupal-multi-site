stages:
  - deploy
#  - quality

deploy_recette:
  stage: deploy
  script:
    - cd /home/www/[project-path]
    - chmod 755 web/sites/default/
    - git pull
    - /usr/local/bin/php71 /usr/local/bin/composer install
    - cd gulp
    - npm install
    - gulp sassprod
    - cd /home/www/[project-path]
    - /usr/local/bin/php71 bin/drupal updb
    - /usr/local/bin/php71 bin/drupal cr
  environment:
    name: recette
    url: [url-recette]
  only:
    - devel
  tags:
    - recette

deploy_prod:
  stage: deploy
  script:
    - cd /home/www/[project-path]
    - ansible-playbook -i ansistrano/inventory/hosts ansistrano/playbooks/production/deploy.yml
  environment:
    name: production
    url: [url-prod]
  only:
    - master
  when: manual
  tags:
    - deploy

